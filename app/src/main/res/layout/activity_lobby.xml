<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- top bar -->


        <LinearLayout
            android:id="@+id/topbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#434548"
                    android:orientation="vertical"
                    android:padding="4dp">




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#d8d8d8"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/username_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#d8d8d8"
                            android:gravity="center"
                            android:padding="8dp"
                            android:textColor="#4d4d51"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            tools:text="Usernvn" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/free_square" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#d8d8d8"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="0/0/0"
                        android:textColor="#4d4d51"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#d8d8d8"
                        android:gravity="center"
                        android:paddingBottom="8dp"
                        android:text="W/L/S"
                        android:textColor="#7a7a7c"
                        android:textSize="16sp"
                        android:textStyle="bold" />




                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#434548"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/find_friend_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#39000ed1"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="FIND\nFRIEND"
                        android:textColor="#4d4d51"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#434548"
                    android:orientation="vertical"
                    android:padding="4dp">


                    <TextView
                        android:id="@+id/random_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#27cb43"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="MATCH\nRANDOM"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Active Games (#)"
                android:visibility="gone"
                tools:visibility="visible"
                android:background="#8bcbff"
                android:textColor="#434548"
                android:textSize="24sp"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/active_count"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#434548"/>

        </LinearLayout>

        <!-- listView -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/topbar"
            android:background="#000"
            android:orientation="vertical">

            <ListView
                android:id="@+id/active_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3d78d0"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"/>


        </LinearLayout>


        <!-- make username! -->

        <LinearLayout
            android:id="@+id/username_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#5cc6e4"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#8bd6eb"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="ChessMATE"
                    android:textAlignment="center"
                    android:textSize="64dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <ImageView
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/free_square" />


            <EditText
                android:id="@+id/username_edittext"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#FFFFFF"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
                android:hint="(max: 7 char)"
                android:inputType="textFilter"
                android:maxLength="7"
                android:paddingBottom="8dp"
                android:textAlignment="center"
                android:textColorHint="#bdb6b6"
                android:textSize="44dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#8bd6eb"
                android:gravity="center">

                <TextView
                    android:id="@+id/set_username"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:background="#62ff6b"
                    android:padding="8dp"
                    android:text="SET USERNAME"
                    android:textAlignment="center"
                    android:textSize="28dp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
