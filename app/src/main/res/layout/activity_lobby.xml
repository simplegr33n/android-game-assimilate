<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- top bar -->


        <LinearLayout
            android:id="@+id/topbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#434548"
                    android:orientation="vertical"
                    android:padding="4dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#d8d8d8"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/username_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#d8d8d8"
                            android:gravity="center"
                            android:padding="8dp"
                            android:textColor="#4d4d51"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            tools:text="Usernvn" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/free_square" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#d8d8d8"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="0/0/0"
                        android:textColor="#4d4d51"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#d8d8d8"
                        android:gravity="center"
                        android:paddingBottom="8dp"
                        android:text="W/L/S"
                        android:textColor="#7a7a7c"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#434548"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/find_friend_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#39000ed1"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="FIND\nFRIEND"
                        android:textColor="#4d4d51"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#434548"
                    android:orientation="vertical"
                    android:padding="4dp">


                    <TextView
                        android:id="@+id/random_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#27cb43"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="MATCH\nRANDOM"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/active_count"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#8bcbff"
                android:gravity="center"
                android:text="Active Games (#)"
                android:textColor="#434548"
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#434548" />

        </LinearLayout>

        <!-- listView -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/topbar"
            android:background="#000"
            android:orientation="vertical">

            <ListView
                android:id="@+id/active_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3d78d0"
                android:paddingLeft="4dp"
                android:paddingRight="4dp" />


        </LinearLayout>


        <!-- make username! -->

        <LinearLayout
            android:id="@+id/load_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#5cc6e4"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:background="#ed432d"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="CAMPAIGN"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="64dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="#0000ff"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/wait_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ProgressBar
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_margin="22dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:text="one moment..." />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/username_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="What's your name?"
                        android:textColor="#FFF"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/username_edittext"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="#FFFFFF"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
                        android:hint="candidate"
                        android:inputType="textFilter"
                        android:maxLength="8"
                        android:paddingBottom="8dp"
                        android:textAlignment="center"
                        android:textColorHint="#bdb6b6"
                        android:textSize="44dp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FF0000"
                        android:gravity="center"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/set_username"
                            android:layout_width="240dp"
                            android:layout_height="match_parent"
                            android:background="#ffffff"
                            android:padding="8dp"
                            android:text="SET"
                            android:textAlignment="center"
                            android:textSize="28dp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="(max length 8 characters)"
                            android:textAlignment="center"
                            android:textColor="#dddddd" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="#FF0000"
                android:gravity="center">


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
